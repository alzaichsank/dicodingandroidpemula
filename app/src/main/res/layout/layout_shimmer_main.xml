<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shimmer_live_menu"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:shimmer_auto_start="true"
    android:orientation="horizontal">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--linear-->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <View
        android:layout_width="@dimen/_90sdp"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_height="@dimen/extra_medium_margin"
        android:layout_marginStart="@dimen/small_margin_plus"
        android:layout_marginLeft="@dimen/small_margin_plus"
        android:layout_marginEnd="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:background="@drawable/bg_shape_rectangle_corner_shimmer"
        android:padding="@dimen/medium_margin" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/_2sdp">

        <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/_100sdp"
          android:background="@drawable/bg_shape_rectangle_corner_shimmer" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/_2sdp">

        <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/_100sdp"
          android:background="@drawable/bg_shape_rectangle_corner_shimmer" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/_2sdp">

        <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/_100sdp"
          android:background="@drawable/bg_shape_rectangle_corner_shimmer" />

      </LinearLayout>

    </LinearLayout>
    <!--linear-->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <View
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/extra_medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginStart="@dimen/small_margin_plus"
        android:layout_marginLeft="@dimen/small_margin_plus"
        android:layout_marginEnd="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:background="@drawable/bg_shape_rectangle_corner_shimmer"
        android:padding="@dimen/medium_margin" />
    </LinearLayout>
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      >

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_margin"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/_2sdp">

        <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/_100sdp"
          android:background="@drawable/bg_shape_rectangle_corner_shimmer" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/_2sdp">

        <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/_100sdp"
          android:background="@drawable/bg_shape_rectangle_corner_shimmer" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/_2sdp">

        <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/_100sdp"
          android:background="@drawable/bg_shape_rectangle_corner_shimmer" />

      </LinearLayout>

    </LinearLayout>

  </LinearLayout>
</com.facebook.shimmer.ShimmerFrameLayout>